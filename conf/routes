# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                               controllers.Application.index()
GET           /authTest                       controllers.Application.indexTest()

### Œcie¿ki:

#### Logowanie i rejestracja
POST          /auth/signup                    controllers.AuthDispatcher.dispatchRequest(path: String ?= "auth/signup")
POST          /auth/signin/credentials        controllers.AuthDispatcher.dispatchRequest(path: String ?= "auth/signin/credentials")
POST          /auth/signin/:provider          controllers.AuthDispatcher.dispatchSocialRequest(provider)

###### Testowe usugi
GET           /test/token/random              controllers.AuthDispatcher.testToken()

#### Dostêp do danych
GET           /profiles                       controllers.ProfileServiceConnector.profile(enums.Method.GET)
POST          /profiles                       controllers.ProfileServiceConnector.profile(enums.Method.POST)
DELETE        /profiles                       controllers.ProfileServiceConnector.profile(enums.Method.DELETE)
PUT           /profiles                       controllers.ProfileServiceConnector.profile(enums.Method.PUT)

###### Testowe usugi
GET           /profiles/business/all          controllers.ProfileServiceConnector.getLocalList()

#### Przestarza³e
##### Klient biznesowy
GET           /profiles/business              controllers.ProfileServiceConnector.profile(enums.Method.GET)
POST          /profiles/business              controllers.ProfileServiceConnector.profile(enums.Method.POST)
PUT           /profiles/business              controllers.ProfileServiceConnector.profile(enums.Method.DELETE)
DELETE        /profiles/business              controllers.ProfileServiceConnector.profile(enums.Method.PUT)

##### Klient indywidualny
GET           /profiles/indyvidual            controllers.ProfileServiceConnector.profile(enums.Method.GET)


#### Nieistniejce?
POST          /events/:action                 controllers.EventsDispatcher.dispatch(action)

# Map the JS resource paths
GET           /*file                          controllers.Assets.versioned(path="/public", file: Asset)


# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                   controllers.Assets.at(path="/public", file)
